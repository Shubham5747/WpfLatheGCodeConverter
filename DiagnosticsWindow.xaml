<Window x:Class="WpfLatheGCodeConverter.DiagnosticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Diagnostics" Height="600" Width="800">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Left" Margin="0,0,0,8">
            <Button x:Name="BtnOpenLog" Content="Open Log" Width="100" Margin="0,0,8,0" Click="BtnOpenLog_Click"/>
            <Button x:Name="BtnOpenJson" Content="Open JSON" Width="100" Margin="0,0,8,0" Click="BtnOpenJson_Click"/>
            <Button x:Name="BtnRefresh" Content="Refresh" Width="80" Click="BtnRefresh_Click"/>
        </StackPanel>

        <TabControl Grid.Row="1">
            <TabItem Header="Log">
                <ScrollViewer>
                    <TextBox x:Name="TxtLog" FontFamily="Consolas" FontSize="12" TextWrapping="NoWrap" AcceptsReturn="True" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="JSON">
                <ScrollViewer>
                    <TextBox x:Name="TxtJson" FontFamily="Consolas" FontSize="12" TextWrapping="NoWrap" AcceptsReturn="True" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Close" Width="90" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>